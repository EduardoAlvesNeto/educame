generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Institution {
  id String @db.Uuid @id @default(uuid())
  name String @db.VarChar()
  cnpj String @unique
  createAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("institutions")
}

model User{
  id String @db.Uuid @id @default(uuid())
  name String @db.VarChar()
  email String @unique
  password String
  cpf String @unique
  createAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}
